{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Cucumber Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "cucumber-js",
        "--require", "e2e/steps/**/*.ts",
        "e2e/features/**/*.feature",
        "--publish-quiet"
      ],
      "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js",
      "args": [],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}
